# API Keys
GOOGLE_API_KEY=your_google_gemini_api_key_here

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/
# For authenticated connection:
# MONGODB_URI=mongodb://username:password@localhost:27017/sales_agent_db

# User Configuration
USER_ID=user_12345

# Monitoring & Observability

# Tracing Configuration
TRACE_EXPORTER=console  # Options: console, jaeger, otlp
JAEGER_HOST=localhost
JAEGER_PORT=6831
OTLP_ENDPOINT=http://localhost:4317

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_FILE=false
LOG_DIR=logs

# Environment
ENVIRONMENT=development  # Options: development, staging, production
SERVICE_VERSION=1.0.0

# Service Ports (for reference)
# Sales Agent: 8000 (if running as web service)
# Recommendation Agent: 5002
# Inventory Agent: 5003
# Fulfillment Agent: 5001
# Post-Purchase Agent: 5004
# Payment Agent: 5005
# Loyalty Agent: 5006

{
  "agentName": "paymentAgent",
  "description": "Processes payments securely.",
  "functions": {
    "initiateCheckout": {
      "description": "Creates a secure payment session for the user's current cart.",
      "requestSchema": {
        "type": "object",
        "properties": {
          "userId": { "type": "string" },
          "cartId": { "type": "string" },
          "totalAmount": { "type": "number" },
          "currency": { "type": "string" }
        },
        "required": ["userId", "cartId", "totalAmount", "currency"]
      },
      "responseSchema": {
        "type": "object",
        "properties": {
          "transactionId": { "type": "string" },
          "paymentGatewayUrl": { "type": "string", "format": "uri" },
          "status": { "type": "string", "enum": ["initiated", "failed"] }
        }
      }
    }
  }
}
